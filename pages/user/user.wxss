/* pages/user/user.wxss */

.top{
    display: flex;
    flex-direction: column;
}
.userLogo_Name{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 10px;
}
.userLogo_Name image{
    width:100px;
    height: 100px;
    border-radius: 50%;
}
.userLogo_Name text{
    margin-top: 10px;
    font-size: 18px;
}
.locations{
    display: flex;
    flex-direction: row;
    justify-content: center;
    font-size: 12px;
    color: #353535;
    margin-top: 10px;
}
.locations image{
    width: 15px;
    height: 15px;
}
.weather{
    padding-left: 10px;
    padding-bottom: 10px;
    margin-top: 10px;
    border-bottom: 1px solid #03a9f4;
}
.weather>text{
    font-size: 16px;
    font-weight: bold;
    color: #444;
}
.weather_info{
    font-size: 13px;
    padding: 10px 5px 0px 0px ;
}
.weather_info image{
    width: 25px;
    height: 25px;
}
.weather_info text{
    margin-left: 15px;
    color: #353535;
}
.collect{
    padding-left: 10px;
    padding-bottom: 10px;
    margin-top: 10px;
}
.collect>text{
    font-size: 16px;
    font-weight: bold;
    color: #444;
}
.collentList{
    min-height: 40px;
    width: 92%;
    margin-top: 7px;
    padding:5px 5px 10px 5px;
    font-size: 14px;
    color: #444;
    border: 1px solid #03a9f4;
    border-radius: 4px;
   
}
.collentList navigator{
    display: flex;
    flex-direction: row;
    flex-shrink: 0;
}
.collentList image{
    width:70px;
    height:60px
}
.collentList text{
    width: 75%;
    font-size: 14px;
    margin-left: 10px;
    color: #444;    
}
.tit_time{
    flex-basis: 45%;
}
.tit_time text{
  width: 100%;
  display: flex;
  flex-direction: row; 
  margin-bottom: 5px;
  margin-left: 20px;

}
.detailbutton{
  font-size: 10px;
  flex-basis: 35%;
  align-self: center
}
.collectScroll{
    height: 400px;
}