/*菜单*/
.container {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color: rgb(0, 68, 97);
  z-index: 0;
}
.wc{
  color: white;
  padding: 30rpx 0 30rpx 40rpx;
}
.wcIndex{
  color: white;
  padding: 30rpx 0 30rpx 40rpx;
  position: fixed;
  bottom: 20rpx;
}
.page-content{
  padding-top: 30rpx;
}
.page-top{
  height: 100%;
  position:fixed; 
  width: 750rpx;
  background-color: #F6F6F6;
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.page-top btnimg{
  position: absolute;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}
.btnimg{
  position: absolute;
  width: 68rpx;
  height: 48rpx;
  left: 20rpx;
  top: 20rpx;
  z-index:10;
}
.c-state1{
  transform: rotate(0deg) scale(1) translate(55%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(55%,0%); 
}
.c-state2{
  transform: rotate(0deg) scale(.8) translate(55%,0%); 
  -webkit-transform: rotate(0deg) scale(.8) translate(55%,0%); 
}